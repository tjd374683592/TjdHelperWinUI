<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TjdHelperWinUI.Pages.MarkdownPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TjdHelperWinUI.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdcontrols="using:CommunityToolkit.Labs.WinUI.MarkdownTextBlock"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Header  -->
            <RowDefinition Height="*" />
            <!--  内容填满  -->
        </Grid.RowDefinitions>

        <!--  Expander 内容  -->
        <Expander
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            ExpandDirection="Down"
            Header="Markdown"
            IsExpanded="True">

            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  左边 Markdown 渲染  -->
                <ScrollViewer Grid.Column="0">
                    <Border
                        Margin="5"
                        Padding="5"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource SystemAccentColor}"
                        BorderThickness="1"
                        CornerRadius="8">
                        <mdcontrols:MarkdownTextBlock
                            x:Name="MarkdownTextBlock1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Config="{x:Bind LiveMarkdownConfig, Mode=OneTime}"
                            Text="{x:Bind MarkdownTextBox.Text, Mode=OneWay}" />
                    </Border>
                </ScrollViewer>


                <!--  右边 Markdown 编辑  -->
                <ScrollViewer Grid.Column="1">
                    <TextBox
                        x:Name="MarkdownTextBox"
                        Margin="5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AcceptsReturn="True"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        TextWrapping="Wrap" />
                </ScrollViewer>
            </Grid>
        </Expander>
    </Grid>
</Page>
