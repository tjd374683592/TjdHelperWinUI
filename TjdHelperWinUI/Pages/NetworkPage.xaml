<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TjdHelperWinUI.Pages.NetworkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TjdHelperWinUI.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="3">
            <Border
                Padding="12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">

                <Grid ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="Internet" />
                        <TextBlock
                            x:Name="IsInternetAvailableText"
                            FontSize="16"
                            FontWeight="SemiBold" />
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="Metered" />
                        <TextBlock
                            x:Name="IsInternetOnMeteredConnectionText"
                            FontSize="16"
                            FontWeight="SemiBold" />
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="Connection" />
                        <TextBlock
                            x:Name="ConnectionTypeText"
                            FontSize="16"
                            FontWeight="SemiBold" />
                    </StackPanel>

                    <StackPanel Grid.Column="3">
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="Signal" />
                        <TextBlock
                            x:Name="SignalBarsText"
                            FontSize="16"
                            FontWeight="SemiBold" />
                    </StackPanel>

                    <StackPanel Grid.Column="4">
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="Network" />
                        <TextBlock
                            x:Name="NetworkNamesText"
                            FontSize="16"
                            FontWeight="SemiBold"
                            TextTrimming="CharacterEllipsis" />
                    </StackPanel>

                    <StackPanel Grid.Column="5">
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="IP Address" />
                        <TextBlock
                            x:Name="IpAddressText"
                            FontSize="16"
                            FontWeight="SemiBold"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="Wrap" />
                    </StackPanel>

                </Grid>
            </Border>
        </Grid>

        <!--  新增 PID 搜索区域  -->


        <Expander
            Grid.Row="2"
            Margin="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            ExpandDirection="Down"
            Header="TCP/UDP Connection"
            IsExpanded="True">

            <Grid ColumnSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="3"
                    VerticalAlignment="Top"
                    Orientation="Horizontal"
                    Spacing="5">
                    <TextBlock VerticalAlignment="Center" Text="Search PID:" />
                    <TextBox x:Name="PidSearchBox" Width="200" />
                    <Button Click="HighlightPidButton_Click" Content="Highlight" />
                </StackPanel>

                <!--  TCP 端口 DataGrid  -->
                <Grid Grid.Row="1" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  TCP 标题  -->
                    <TextBlock
                        Padding="5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="TCP 端口" />

                    <!--  TCP DataGrid  -->
                    <controls:DataGrid
                        x:Name="DgTcpPorts"
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        CanUserResizeColumns="True"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding TcpPortList}"
                        SelectionMode="Extended">
                        <controls:DataGrid.Columns>
                            <controls:DataGridTextColumn
                                Width="150"
                                Binding="{Binding LocalAddress}"
                                Header="本地 IP" />
                            <controls:DataGridTextColumn
                                Width="100"
                                Binding="{Binding LocalPort}"
                                Header="端口" />
                            <controls:DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding ProcessName}"
                                Header="进程名" />
                            <controls:DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PID}"
                                Header="PID" />
                            <controls:DataGridTextColumn
                                Width="150"
                                Binding="{Binding RemoteAddress}"
                                Header="外部 IP" />
                            <controls:DataGridTextColumn
                                Width="100"
                                Binding="{Binding RemotePort}"
                                Header="外部端口" />
                            <controls:DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding State}"
                                Header="状态" />
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>

                    <!--  TCP 状态标题  -->
                    <TextBlock
                        Grid.Row="2"
                        Padding="5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="常见 TCP 状态" />

                    <!--  TCP 状态 DataGrid  -->
                    <controls:DataGrid
                        x:Name="DgTcpStates"
                        Grid.Row="3"
                        AutoGenerateColumns="False"
                        CanUserResizeColumns="True"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding TcpStateList}">
                        <controls:DataGrid.Columns>
                            <controls:DataGridTextColumn
                                Width="150"
                                Binding="{Binding Status}"
                                Header="状态" />
                            <controls:DataGridTextColumn
                                Width="200"
                                Binding="{Binding Meaning}"
                                Header="含义" />
                            <controls:DataGridTextColumn
                                Width="*"
                                Binding="{Binding Description}"
                                Header="说明" />
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>

                </Grid>

                <!--  UDP 端口 DataGrid  -->
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  UDP 标题  -->
                    <TextBlock
                        Padding="5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="UDP 端口" />

                    <!--  UDP DataGrid  -->
                    <controls:DataGrid
                        x:Name="DgUdpPorts"
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        CanUserResizeColumns="True"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding UdpPortList}"
                        SelectionMode="Extended">
                        <controls:DataGrid.Columns>
                            <controls:DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding LocalAddress}"
                                Header="本地 IP" />
                            <controls:DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding LocalPort}"
                                Header="端口" />
                            <controls:DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding ProcessName}"
                                Header="进程名" />
                            <controls:DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PID}"
                                Header="PID" />
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </Grid>

            </Grid>
        </Expander>
    </Grid>
</Page>
