<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TjdHelperWinUI.Pages.NetworkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TjdHelperWinUI.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Expander
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            ExpandDirection="Down"
            Header="TCP/UDP Connection"
            IsExpanded="True">

            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  TCP 端口 DataGrid  -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  TCP 标题  -->
                    <TextBlock
                        Padding="5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="TCP 端口" />

                    <!--  TCP DataGrid  -->
                    <controls:DataGrid
                        x:Name="DgTcpPorts"
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        CanUserResizeColumns="True"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding TcpPortList}"
                        SelectionMode="Single">
                        <controls:DataGrid.Columns>
                            <controls:DataGridTextColumn
                                Width="150"
                                Binding="{Binding LocalAddress}"
                                Header="本地 IP" />
                            <controls:DataGridTextColumn
                                Width="100"
                                Binding="{Binding LocalPort}"
                                Header="端口" />
                            <controls:DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding ProcessName}"
                                Header="进程名" />
                            <controls:DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PID}"
                                Header="PID" />
                            <controls:DataGridTextColumn
                                Width="150"
                                Binding="{Binding RemoteAddress}"
                                Header="外部 IP" />
                            <controls:DataGridTextColumn
                                Width="100"
                                Binding="{Binding RemotePort}"
                                Header="外部端口" />
                            <controls:DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding State}"
                                Header="状态" />
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>

                    <!--  TCP 状态标题  -->
                    <TextBlock
                        Grid.Row="2"
                        Padding="5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="常见 TCP 状态" />

                    <!--  TCP 状态 DataGrid  -->
                    <controls:DataGrid
                        x:Name="DgTcpStates"
                        Grid.Row="3"
                        AutoGenerateColumns="False"
                        CanUserResizeColumns="True"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding TcpStateList}">
                        <controls:DataGrid.Columns>
                            <controls:DataGridTextColumn
                                Width="150"
                                Binding="{Binding Status}"
                                Header="状态" />
                            <controls:DataGridTextColumn
                                Width="200"
                                Binding="{Binding Meaning}"
                                Header="含义" />
                            <controls:DataGridTextColumn
                                Width="*"
                                Binding="{Binding Description}"
                                Header="说明" />
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>

                </Grid>

                <!--  UDP 端口 DataGrid  -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  UDP 标题  -->
                    <TextBlock
                        Padding="5"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="UDP 端口" />

                    <!--  UDP DataGrid  -->
                    <controls:DataGrid
                        x:Name="DgUdpPorts"
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        CanUserResizeColumns="True"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding UdpPortList}"
                        SelectionMode="Single">
                        <controls:DataGrid.Columns>
                            <controls:DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding LocalAddress}"
                                Header="本地 IP" />
                            <controls:DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding LocalPort}"
                                Header="端口" />
                            <controls:DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding ProcessName}"
                                Header="进程名" />
                            <controls:DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PID}"
                                Header="PID" />
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </Grid>

            </Grid>
        </Expander>
    </Grid>
</Page>
