<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TjdHelperWinUI.Pages.CimPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TjdHelperWinUI.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:TjdHelperWinUI.Models"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Expander
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            ExpandDirection="Down"
            Header="Cim"
            IsExpanded="True">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  左侧 Namespace  -->
                <controls:HeaderedTreeView
                    Grid.Column="0"
                    Margin="5"
                    Header="Namespaces"
                    ItemsSource="{Binding RootNodes, Mode=OneWay}"
                    SelectionChanged="HeaderedTreeView_SelectionChanged">
                    <controls:HeaderedTreeView.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="SemiBold" Text="{Binding}" />
                        </DataTemplate>
                    </controls:HeaderedTreeView.HeaderTemplate>
                    <controls:HeaderedTreeView.ItemTemplate>
                        <DataTemplate x:DataType="models:CimTreeNode">
                            <muxc:TreeViewItem
                                Content="{x:Bind Name}"
                                IsExpanded="{Binding IsExpanded}"
                                ItemsSource="{x:Bind Children}" />
                        </DataTemplate>
                    </controls:HeaderedTreeView.ItemTemplate>
                </controls:HeaderedTreeView>

                <!--  中间 Class，独立滚动  -->
                <Grid Grid.Column="1" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Text="Class" />

                    <ListView
                        Grid.Row="1"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding Classes, Mode=OneWay}"
                        SelectedItem="{Binding SelectedClass, Mode=TwoWay}" />
                </Grid>


                <!--  右侧 Property  -->
                <Grid Grid.Column="2" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Text="Property" />

                    <ListView
                        Grid.Row="1"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding Properties, Mode=OneWay}" />
                </Grid>

                <Grid Grid.Column="3" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Text="Instance" />

                    <Button Grid.Row="1" Content="instance" />
                </Grid>

            </Grid>
        </Expander>

    </Grid>
</Page>
