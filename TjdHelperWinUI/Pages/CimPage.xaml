<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TjdHelperWinUI.Pages.CimPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TjdHelperWinUI.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:TjdHelperWinUI.Models"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Expander
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Stretch"
            ExpandDirection="Down"
            Header="Cim Explorer"
            IsExpanded="True">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!--  Namespace  -->
                <controls:HeaderedTreeView
                    Grid.Column="0"
                    Margin="5"
                    Header="Namespaces"
                    ItemsSource="{Binding RootNodes, Mode=OneWay}"
                    RightTapped="Item_RightTapped"
                    SelectionChanged="HeaderedTreeView_SelectionChanged">
                    <controls:HeaderedTreeView.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="SemiBold" Text="{Binding}" />
                        </DataTemplate>
                    </controls:HeaderedTreeView.HeaderTemplate>
                    <controls:HeaderedTreeView.ItemTemplate>
                        <DataTemplate x:DataType="models:CimTreeNode">
                            <muxc:TreeViewItem
                                Content="{x:Bind Name}"
                                IsExpanded="{Binding IsExpanded}"
                                ItemsSource="{x:Bind Children}" />
                        </DataTemplate>
                    </controls:HeaderedTreeView.ItemTemplate>
                </controls:HeaderedTreeView>

                <!--  Class  -->
                <Grid Grid.Column="1" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Text="Class" />

                    <ListView
                        Grid.Row="1"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding Classes, Mode=OneWay}"
                        RightTapped="Item_RightTapped"
                        SelectedItem="{Binding SelectedClass, Mode=TwoWay}" />
                </Grid>


                <!--  Property / Method  -->
                <Grid Grid.Column="2" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Text="Members" />

                    <TreeView
                        Grid.Row="1"
                        ItemsSource="{Binding Properties}"
                        RightTapped="Item_RightTapped">
                        <TreeView.ItemTemplate>
                            <DataTemplate x:DataType="models:CimTreeNode">
                                <TreeViewItem
                                    Content="{Binding Name}"
                                    IsExpanded="{Binding IsExpanded, Mode=TwoWay}"
                                    ItemsSource="{Binding Children}" />
                            </DataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>

                <!--  Instance + Property  -->
                <Grid Grid.Column="3" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Text="Instance" />

                    <TreeView
                        Grid.Row="1"
                        ItemsSource="{Binding Instances}"
                        RightTapped="Item_RightTapped">
                        <TreeView.ItemTemplate>
                            <DataTemplate x:DataType="models:CimTreeNode">
                                <TreeViewItem
                                    Content="{Binding Name}"
                                    IsExpanded="{Binding IsExpanded, Mode=TwoWay}"
                                    ItemsSource="{Binding Children}" />
                            </DataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>


            </Grid>
        </Expander>

    </Grid>
</Page>
